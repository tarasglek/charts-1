{
  "kind": "ReplicationController", 
  "spec": {
    "replicas": 1, 
    "template": {
      "spec": {
        "restartPolicy": "Always", 
        "containers": [
          {
            "image": "postgres", 
            "volumeMounts": [
              {
                "mountPath": "/var/lib/postgresql/data", 
                "name": "db-volume"
              }
            ], 
            "name": "postgres-server", 
            "ports": [
              {
                "name": "psql", 
                "containerPort": 5432
              }
            ]
          }
        ], 
        "volumes": [
          {
            "name": "db-volume", 
            "hostPath": {
              "path": "/mnt/db-30432"
            }
          }
        ]
      }, 
      "metadata": {
        "labels": {
          "role": "postgres-server"
        }
      }
    }, 
    "selector": {
      "role": "postgres-server"
    }
  }, 
  "apiVersion": "v1", 
  "metadata": {
    "name": "postgres-server"
  }
}